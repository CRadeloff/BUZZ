<Window x:Class="BUZZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BUZZ"
        mc:Ignorable="d"
        Title="BUZZ" Height="500" Width="300">
    <Grid>
        <DockPanel>
            <Grid Margin="5" DockPanel.Dock="Top">
                <Menu HorizontalAlignment="Left" VerticalAlignment="Center">
                    <MenuItem Header="File">
                        <MenuItem x:Name="ExitMenuItem" Header="Exit BUZZ"></MenuItem>
                    </MenuItem>
                    <MenuItem Header="Characters">
                        <MenuItem x:Name="CharacterManagerMenuButton" Header="Manage Characters" PreviewMouseDown="ManageCharactersMenuButton_OnMouseDown"/>
                    </MenuItem>
                </Menu>
                <Menu HorizontalAlignment="Right">
                    <MenuItem x:Name="AboutMenuitem" Header="About"/>
                </Menu>
            </Grid>
            <Grid>

            </Grid>
        </DockPanel>
    </Grid>
</Window>
