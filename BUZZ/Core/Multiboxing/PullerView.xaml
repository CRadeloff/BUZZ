<UserControl x:Class="BUZZ.Core.Multiboxing.PullerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BUZZ.Core.Multiboxing"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="250">
    <Grid MaxHeight="150" MaxWidth="250" Visibility="{Binding IsOnline, Converter={StaticResource BooleanToVisibility}}">
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Viewbox Margin="5">
                    <Label x:Name="CharacterNameLabel" Content="{Binding Character.CharacterName}" HorizontalAlignment="Center" ></Label>
                </Viewbox>
            </Grid>
            <Grid Grid.Row="1">
                <Viewbox>
                    <Label x:Name="CharacterLocationLabel" Content="{Binding CurrentSolarSystem}" HorizontalAlignment="Center"></Label>
                </Viewbox>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
