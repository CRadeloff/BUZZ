<Window x:Class="BUZZ.Core.LPManager.LpViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Loyalty Point Viewer" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Button DockPanel.Dock="Bottom" Content="Click to load LP" Margin="2" Click="Button_Click"/>
            <DataGrid x:Name="DataGrid" Margin="5" CanUserAddRows="False" CanUserDeleteRows="False" ItemsSource="{Binding CharacterLoyalty}">
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>
